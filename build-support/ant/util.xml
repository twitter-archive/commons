<project name="util">
  <dirname property="util.basedir" file="${ant.file.util}"/>

  <macrodef name="_if_verbose">
    <element name="tasks" implicit="true" optional="true"/>

    <sequential>
      <if>
        <istrue value="${verbose}"/>
        <then><tasks/></then>
      </if>
    </sequential>
  </macrodef>

  <macrodef name="_log">
    <text name="message"/>
    <element name="extras" implicit="true" optional="true"/>

    <sequential>
      <_if_verbose>
        <echo>@{message}</echo>
        <extras/>
      </_if_verbose>
    </sequential>
  </macrodef>
</project>
