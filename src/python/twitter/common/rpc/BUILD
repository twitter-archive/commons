python_library(
  name = 'rpc',
  sources = globs('*.py'),
  dependencies = [
    '3rdparty/python:thrift',
    'src/python/twitter/common/lang',
    'src/python/twitter/common/rpc/finagle',
    'src/python/twitter/common/rpc/sasl:sourceonly',
    'src/python/twitter/common/rpc/transports:all',
  ],
  provides = setup_py(
    name = 'twitter.common.rpc',
    version = commons_version(),
    description = 'twitter.common thrift helpers including finagle and ssl transports.',
    url = 'https://github.com/twitter/commons',
    license = 'Apache License, Version 2.0',
    zip_safe = True,
    classifiers = [
      'Intended Audience :: Developers',
      'License :: OSI Approved :: Apache Software License',
      'Operating System :: OS Independent',
      'Programming Language :: Python',
    ],
    # TODO(wickman) Build native support in pants for extras_require
    extras_require = {
      'sasl': [
        'kerberos==1.1.1',
        'pure-sasl==0.1.4',
      ],
    },
  ),
)
